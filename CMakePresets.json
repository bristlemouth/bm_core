{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "unit-tests",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "ENABLE_TESTING": "1"
            }
        }
    ],
    "buildPresets": [
        {
            "configurePreset": "unit-tests",
            "name": "unit-tests",
            "jobs": 8
        }
    ]
}